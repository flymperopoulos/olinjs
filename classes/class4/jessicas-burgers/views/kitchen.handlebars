<!-- Bootstrap simple bootstrap trend -->
<div id="aboutus-section" class ="services bg-primary" style="background-color:#aa7243">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-10 col-lg-offset-1">
        <div class="row">
          <div class="col-lg-12">
            <h2 style="font-family: 'Myriad Set Pro', 'Lucida Grande', 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif;">There are plenty of orders made for the kitchen!</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

<center>
	<div id="main-content">
	    <div id='orders-list'>
	    	<!-- Iterates through orders -->
	    {{#each orders}}
	        <li id='{{this._id}}'>
	            <label>
	            {{#each this.ingredients}}
	            <!-- if not last item proceed -->
	                {{#unless @last}}
	                {{this.itemName}},
	                {{else}}
	                and {{this.itemName}}.
	                {{/unless}}
	            {{/each}}
	            </label>
	            <span>
	                <button class='btn-order-completed'>Remove-Completed</button>
	            </span>
	        </li>
	    {{/each}}
	    </div>
	</div>

<br><br>
	<a href="/">
	  <img src="https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/home.png" width="100" height="100">
	</a>
</center>