<!-- Bootstrap for nicer format -->
<div id="aboutus-section" class ="services bg-primary" style="background-color:#ff6666">
  <div class="container">
    <div class="row text-center">
      <div class="col-lg-10 col-lg-offset-1">

        <div class="row">
          <div class="col-lg-12">
            <h2 style="font-family: 'Myriad Set Pro', 'Lucida Grande', 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif;">Order Your Own Ingredients</h2>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
<br>
<!-- handlebars iterating through ingredients -->
<center>
{{#each ingredients}}
  	<div id = '{{this._id}}'>


	  	<div class="info-ingr">
		  	<div class="name-of-ingr"><b><font size="9">{{this.itemName}}</font></b></div>
			<span>$</span><div class="cost-of-ingr" style="display: inline">{{this.cost}}</div>
		</div>

		<!-- Based on boolean state of inStock, class for nutton alters -->
		<label>
			{{#if this.inStock}}
				<input class="order-checkbox" type="checkbox" enabled>
			{{else}}
				<input class="order-checkbox" type="checkbox" disabled>
			{{/if}}

		</label>

	</div>
	<br>
{{/each}}

	<br><br>
	<!-- Submit button signal  -->
	<input type="button" value="Submit" id="btn-order">
	<!-- Rendering with AJAX the field for automatic change in sum -->
	<div class="final-res">
		Total Cost: <div class="total-cost"></div>
	</div>
	<!-- Connect back to home page -->
	<br>
	  <a href="/">
	    <img src="https://cdn2.iconfinder.com/data/icons/windows-8-metro-style/512/home.png" width="100" height="100">
	  </a>
	  <br><br>

<div id="result" style="color:green"></div>
</center>